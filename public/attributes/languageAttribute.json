{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://localhost:7000/attributes/languageAttribute.json#",


	"type": "object",
	"properties": {
		"dataType": {
			"enum": ["Language"]
		}
	},
	"required": ["attributeType", "dataType", "value"],
	"oneOf": [
		{
			"properties": {
				"attributeType" : {
					"enum": ["SingleValue"]
				},
				"value": {
					"$ref": "#/definitions/languageValue"
				}
			}
		},
		{
			"properties": {
				"attributeType" : {
					"enum": ["MultiValue"]
				},
				"value": {
					"type": "array",
					"items": {"$ref": "#/definitions/languageValue"},
					"minItems": 1
				}
			}
		}
	],

	"definitions": {
		"languageValue": {
			"type": "object",
			"properties": {
				"languageId": {
					"type": "string"
				},
				"code": {
					"type": "string"
				},
				"name": {
					"type": "string"
				}
			},
			"required": ["languageId", "code", "name"]
		}
	}
}