{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://localhost:7000/attributes/skillAttribute.json#",


	"type": "object",
	"properties": {
		"dataType": {
			"enum": ["Skill"]
		}
	},
	"required": ["attributeType", "dataType", "value"],
	"oneOf": [
		{
			"properties": {
				"attributeType" : {
					"enum": ["SingleValue"]
				},
				"value": {
					"$ref": "#/definitions/skillValue"
				}
			}
		},
		{
			"properties": {
				"attributeType" : {
					"enum": ["MultiValue"]
				},
				"value": {
					"type": "array",
					"items": {"$ref": "#/definitions/skillValue"},
					"minItems": 1
				}
			}
		}
	],

	"definitions": {
		"skillValue": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"expertise": {
					"type": "number"
				},
				"confidence": {
					"type": "number"
				},
				"lastModified": {
					"type": "string",
					"format": "date"
				},
				"acquisitionChannel": {
					"type": "string"
				}
			},
			"required": ["id", "name", "expertise", "confidence", "lastModified", "acquisitionChannel"]
		}
	}
}